# When adding additional environment variables, the schema in "/src/env.js"
# should be updated accordingly.
# NOTE: Do not expose server-side secrets via NEXT_PUBLIC_*
# Only public, non-sensitive values should use NEXT_PUBLIC_*

# Auth (Auth.js/NextAuth)
# You can generate a new secret on the command line with:
# npx auth secret
# https://next-auth.js.org/configuration/options#secret
AUTH_SECRET=""
AUTH_GITHUB_ID="Iv23lihxGUQ9gTLeDJMv"
AUTH_GITHUB_SECRET=""
# Auth.js runtime (set your fully-qualified site URL in prod)
AUTH_URL="http://localhost:3000"
# Set true on platforms where the host header may differ (e.g. Vercel/NGINX)
AUTH_TRUST_HOST="true"

# AI Provider API keys (optional depending on chosen provider)
# Required if default LLM is Google Gemini (see apps/t3-docs/src/lib/const.ts -> llm[0])
OPENAI_API_KEY=""
ANTHROPIC_API_KEY=""
GOOGLE_GENERATIVE_AI_API_KEY=""

# MCP clients
# GitHub Copilot MCP uses the signed-in user's GitHub token via NextAuth.
# Bookstack MCP requires a server-to-server API key.
BOOKSTACK_API_KEY=""
# Bookstack MCP endpoint (defaults to Cegeka instance if unset)
BOOKSTACK_MCP_URL="https://mcp-wiki.cegeka.com"

# Public config
NEXT_PUBLIC_GITHUB_API_URL="https://api.github.com"
NEXT_PUBLIC_GITHUB_USER="Front-end-Technologies"
NEXT_PUBLIC_GITHUB_REPO="front-end-accelerator"
NEXT_PUBLIC_BASE_URL="http://localhost:3000"
